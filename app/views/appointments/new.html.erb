<div class="header__image">
    <div class="header__title">Entrez vos donn√©es</div>
</div>
<div class="col">
  <div class="card" style=" margin-top: 20px; padding-bottom: 20px">
    <%= simple_form_for @appointment do |f| %>
      <div class="card-body">
        <div class="row">
          <div class="col sm-12">
            <%= f.input :datetime, label: "Date & heure du test" %>
            <%= f.simple_fields_for :results do |ff| %>
               <%= ff.object.metric.name %>
               <%= ff.input :metric_id, as: :hidden %>
               <%= ff.input :value, label: false %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <button type="button" class="btn btn-primary" result_path(result)>Confirmer</button>
  </div>
</div>









