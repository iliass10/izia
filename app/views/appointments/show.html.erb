<div class="header__image">
  <div class="header-opacity">
    <div class="header__title">
      <h1><%= @appointment.test.name %></h1>
      <h2><%= @appointment.datetime.strftime("%d/%m/%Y") %></h2>
    </div>
  </div>
</div>

<div>
  <div class="col">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col">
            <h2>Notre recomandation</h2>
            <div class="row">
              <div class="result-recomandation">
                <div class="bloc-result"><div class="card-title">Pratique sportive</div><div class="log1"><%= icon('fas', @cholesterol_check) %></div></div>
                <div class="bloc-result"><div class="card-title">Consommation de sucre</div><div class="log2"><%= icon('fas', @glycemie_check) %></div></div>
                <div class="bloc-result"><div class="card-title">Consommation d'eau</div><div class="log2"><%= icon('fas', @creatinine_check) %></div></div>
                <div class="bloc-result"><div class="card-title">Gain / Perte de poids</div><div class="log3"><%= icon('fas', @transaminases_check) %></div></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% @appointment.results.each do |result| %>
    <div class="col">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col">
              <h2><%= result.metric.name %></h2>
              <div class="taux">
                <p class="data-hemo"><%= result.value %></p>
                <p class="type-hemo"><%= result.metric.unit %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

